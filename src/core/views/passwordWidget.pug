div.row
  div.input-field.s6.m6.col
    i.material-icons.prefix lock
    input(id="new-password", name="password", type="password",
    data-ng-model="ctrl.password", data-ng-model-options="{ updateOn: 'blur' }",
    data-ng-change="ctrl.refreshPasswordMeter();",
    data-ng-class="{ invalid: ctrl.score < 3 }")
    label(for="new-password") {{ 'INDEX.PASSWORD' | translate }}
  div.s6.m6.col
    div.progress
      div.determinate#password-strength-indicator
    div#password-strength-text
    div#password-strength-feedback(data-ng-show="ctrl.feedback")
      span.password-warning.orange-text.text-darken-2(data-ng-bind="ctrl.feedback.warning")
      br(data-ng-show="ctrl.feedback.suggestions")
      span.password-suggestion(data-ng-repeat="suggestion in ctrl.feedback.suggestions" data-ng-bind="ctrl.suggestion")
div.row
  div.input-field.s6.m6.col
    i.material-icons.prefix lock
    input(id="repeat-password", name="repeat-password", type="password",
    data-ng-model="ctrl.repeatPassword",
    data-ng-class="{ invalid: ctrl.repeatPassword==='' || ctrl.repeatPassword !== ctrl.password }")
    label(for="repeat-password") {{ 'INDEX.CONFIRM_LABEL' | translate }}
  div.s6.m6.col
    p.red-text(data-ng-show="ctrl.repeatPassword !== ctrl.password && ctrl.password !== ''") {{ 'INDEX.CONFIRM_WARNING' | translate }}
